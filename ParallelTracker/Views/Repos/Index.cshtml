@model IEnumerable<ParallelTracker.Models.Repo>

@{
	ViewData["Title"] = "Repos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
	<a asp-action="Create">Copy a GitHub Repo</a>
</p>

@if (Model.Count() == 0)
{
<div class="card">
	<div class="card-body text-center">
		The list is empty.
	</div>
</div>
}

@foreach (var repo in Model)
{
	<div class="card mb-2">
		<div class="card-body">
			<h5 class="card-title">
				<img src="@repo.AvatarUrl" alt="Repo avatar" height="25" />
				<a asp-action="Details" asp-route-id="@repo.Id">@repo.FullName</a>
			</h5>
			<h6 class="card-subtitle mb-1 text-muted">Copied by @repo.Owner.UserName</h6>
			<p class="card-text">@repo.Description</p>
		</div>
	</div>
}