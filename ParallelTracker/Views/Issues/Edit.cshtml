@model ParallelTracker.Controllers.EditIssueInput
@inject ParallelTracker.Tools.CurrentResources CurrentResources
@{
	ViewData["Title"] = $"Edit Issue";
	Layout = "~/Views/Shared/_RepoLayout.cshtml";
}
<div class="card">
	<div class="card-header">
		@ViewData["Title"]
	</div>
	<div class="card-body">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Text" class="control-label"></label>
				<textarea asp-for="Text" class="form-control" rows="10"></textarea>
				<span asp-validation-for="Text" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
				<a class="btn btn-outline-secondary ml-1" asp-controller="Issues" asp-action="Details" asp-route-id="@CurrentResources.Issue.Id">Cancel</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
